include ../logotype/logotype.pug
include ../button/button.pug

mixin footer()
  footer.footer.section
    +logotype({href: "#"})
    ul.footer__navigation
      li.footer__navigation-item
        +button({addClass:'footer__navigation-link',href: '#',value:'Articles'})
      li.footer__navigation-item
        +button({addClass:'footer__navigation-link',href: '#',value:'About us'})
      li.footer__navigation-item
        +button({addClass:'footer__navigation-link',href: "#", value:'Learn more'})
    ul.socials
      li.socials__item
        +button({addClass:'socials__link',href: '#',type:'icon',icon:'facebook'})
      li.socials__item
        +button({addClass:'socials__link',href: '#',type:'icon',icon:'instagram'})
      li.socials__item
        +button({addClass:'socials__link',href: '#',type:'icon',icon:'pinterest'})
      li.socials__item
        +button({addClass:'socials__link',href: '#',type:'icon',icon:'telegram'})


